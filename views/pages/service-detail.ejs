<%- include('../partials/header') %>
<main>
    <section class="service-detail">
        <% if (service.detailHtml) { %>
            <%- service.detailHtml %>
        <% } else { %>
            <div class="service-header">
                <h2><%= service.name %></h2>
                <p class="service-tagline"><%= service.tagline %></p>
            </div>
            <div class="service-description">
                <p><%= service.description %></p>
            </div>
            <% if (service.points && service.points.length) { %>
                <div class="service-features">
                    <h3>Key Features</h3>
                    <ul>
                        <% service.points.forEach(function(point) { %>
                            <li>
                                <span class="service-feature-dot"></span>
                                <%= point %>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            <% } %>
            <div class="service-cta">
                <a href="/contact" class="cta-button">Letâ€™s Build Together</a>
                <a href="/services" class="cta-link">Back to All Services</a>
            </div>
        <% } %>
    </section>
</main>
<%- include('../partials/footer') %>
