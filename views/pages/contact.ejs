<%- include('../partials/header') %>
<main>
    <section class="contact">
        <h2>Contact Zen Data</h2>
        <p>
            Have a project in mind, a question, or just want to say hello? Fill out the form below and weâ€™ll get back to you within one business day.
        </p>

        <form class="contact-form" action="/contact" method="POST" autocomplete="off">
            <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
                <div class="form-errors">
                    <ul>
                        <% errors.forEach(function(error) { %>
                            <li><%= error.msg %></li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>

            <!-- Honeypot field for bots (leave blank) -->
            <input type="text" name="website" tabindex="-1" autocomplete="off" style="display:none" aria-hidden="true">

            <div class="form-group">
                <label for="name">Your Name *</label>
                <input type="text" id="name" name="name" required maxlength="60"
                    autocomplete="name" autocapitalize="words"
                    value="<%= typeof data !== 'undefined' ? data.name : '' %>">
            </div>
            <div class="form-group">
                <label for="email">Your Email *</label>
                <input type="email" id="email" name="email" required maxlength="100"
                    autocomplete="email"
                    value="<%= typeof data !== 'undefined' ? data.email : '' %>">
            </div>
            <div class="form-group">
                <label for="industry">Industry (optional)</label>
                <input type="text" id="industry" name="industry" maxlength="80"
                    value="<%= typeof data !== 'undefined' ? data.industry : '' %>">
            </div>
            <div class="form-group">
                <label for="message">Message *</label>
                <textarea id="message" name="message" rows="5" required maxlength="2000"><%= typeof data !== 'undefined' ? data.message : '' %></textarea>
            </div>
            <button type="submit" class="cta-button">Send Message</button>
        </form>

        <div class="contact-alt">
            <p>
                Prefer email? Reach us at <a href="mailto:info@zendatasolutions.com">info@zendatasolutions.com</a>
            </p>
        </div>
    </section>
</main>
<%- include('../partials/footer') %>
